#!/bin/bash

# update perms on the settings file
chmod -R a+rwx docroot/sites/default/settings.php

# move into the docroot for drush command execution
cd docroot

# install the site
drush -y -l default site-install sb_client --site-name="CLIENT_NAME" --clean-url=1 --account-pass=testing

# enable the dev module
drush -y -l default en sb_dev

# move back up to the root
cd ../

# optionally edit the dev site url and uncomment for convenience
# open "http://siteurl.dev"